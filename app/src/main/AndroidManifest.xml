<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goofin">

    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.DayNight">
        <!-- TODO Intent filters -->
        <activity
            android:name=".activities.holidayfeed.CreateNoteActivity"
            android:label="@string/title_activity_note_create"
            android:parentActivityName=".activities.holidayfeed.CreateNoteActivity" />
        <activity
            android:name=".activities.holidayfeed.EditNoteActivity"
            android:label="@string/title_activity_note_edit"
            android:parentActivityName=".activities.holidayfeed.EditNoteActivity" />
        <activity
            android:name=".activities.saveholiday.CreateHolidayActivity"
            android:label="@string/toolbar_title_create_holiday"
            android:parentActivityName="com.example.goofin.activities.HolidaysListActivity" />
        <activity
            android:name=".activities.saveholiday.EditHolidayActivity"
            android:label="@string/toolbar_title_edit_holiday"
            android:parentActivityName="com.example.goofin.activities.HolidayActivity" />
        <activity
            android:name=".activities.HolidayActivity"
            android:label="@string/title_activity_holiday"
            android:parentActivityName="com.example.goofin.activities.HolidaysListActivity"></activity>
        <activity
            android:name=".activities.HolidaysListActivity"
            android:label="@string/title_activity_holidays_lists">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>